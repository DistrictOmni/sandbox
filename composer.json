{
    "name": "districtomni/sis",
    "description": "A modern, module-based SIS system.",
    "type": "project",
    "license": "MIT",
    "require": {
        "monolog/monolog": "^3.8",
        "vlucas/phpdotenv": "^5.5",
        "illuminate/database": "^12.2",
        "nikic/fast-route": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Modules\\": "Modules/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@composer dump-autoload"
        ],
        "post-update-cmd": [
            "@composer dump-autoload"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist"
    }
}
